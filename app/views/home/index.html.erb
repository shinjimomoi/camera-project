<div>
  <div class="search-form">
    <%= form_tag(root_path, method: :get, class: "search-form") do %>
      <%= text_field_tag(:search, params[:search], placeholder: "Search cameras") %>
      <%= submit_tag("Search", class: "btn btn-primary") %>
    <% end %>
    <h4>Filter by:</h4>
    <div class="filters">
      <p data-filter="condition">Condition:</p>
      <div class="filter condition hidden">
        <%= link_to "New to used", { order_by: 'condition', sort_direction: 'asc' } %>
        <%= link_to "Used to new", { order_by: 'condition', sort_direction: 'desc' } %>
      </div>
      <p data-filter="price">Price:</p>
      <div class="filter price hidden">
        <%= link_to 'Lower to higher', root_path(order_by: 'price', sort_direction: 'asc') %>
        <%= link_to 'Higher to low', root_path(order_by: 'price', sort_direction: 'desc') %>
      </div>
    </div>
  </div>
  <div class="camera-list">
		<% @cameras.each do |camera| %>
      <% unless user_signed_in? && camera.user == current_user %>
        <%= link_to camera_path(camera), class: "card-link" do %>
          <%= render 'shared/card', camera: camera, card_style: 'home-card' %>
        <% end %>
      <% end %>
		<% end %>
  </div >
</div>
