<h1>Edit User</h1>

  <%= form_with(model: @user, url: user_path(@user), method: :patch) do |form| %>
    <div>
      <%= form.label :name %>
      <%= form.text_field :name %>
    </div>

    <div>
      <%= form.label :age %>
      <%= form.number_field :age %>
    </div>

    <div>
      <%= form.label :country %>
      <%= form.text_field :country %>
    </div>

    <div>
      <%= form.label :email %>
      <%= form.email_field :email %>
    </div>

    <div>
      <%= form.label :password %>
      <%= form.password_field :password %>
    </div>

    <div>
      <%= form.submit "Update User" %>
    </div>
  <% end %>