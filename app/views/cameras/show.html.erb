<h1>Camera Details</h1>
<div class="card">
  <%= render partial: 'shared/card', locals: { camera: @camera, card_style: 'show-card' } %>
</div>
<div class="bookings">
  <% if @bookings.present? && @camera.user == current_user%>
    <ul>
      <% @bookings.order(start_date: :asc).each do |booking| %>
        <li>
          Booked from <%= booking.start_date %> to <%= booking.end_date %> by <%= booking.user.name %>
        </li>
      <% end %>
    </ul>
  <% end %>
</div>
    <%= render partial: 'shared/reviews', locals: { reviews: @reviews } %>
<div class="controls">
  <% if user_signed_in? && @camera.user == current_user %>
    <%= link_to 'Edit', edit_camera_path(@camera), class: "btn btn-primary" %>
    <%= form_with(model: @camera, method: :delete, url: camera_path(@camera)) do |form| %>
      <%= form.submit 'Delete', class:"btn btn-delete" %>
    <% end %>
  <% end %>
  <% if user_signed_in? && @camera.user != current_user %>
    <div class="review-form">
      <%= form_with(model: [@camera, @review], url: camera_reviews_path(@camera)) do |form| %>
        <%= form.hidden_field :camera_id, value: @camera.id %>

        <%= form.label :rating, "Rating:" %>
        <%= form.number_field :rating, in: 1..5 %>

        <%= form.label :comment, "Comment:" %>
        <%= form.text_area :comment %>

        <%= form.submit "Submit" %>
      <% end %>
    </div>
    <%= link_to "Book this camera", new_booking_path(camera_id: @camera.id), class: "btn btn-primary" %>
  <% end %>
  <% if user_signed_in? %>
    <%= link_to 'My Cameras', cameras_path, class: "btn btn-primary" %>
  <% else %>
    <%= link_to 'Back', root_path, class: "btn btn-primary" %>
<% end %>
</div>
