<div class="card <%= card_style %>">
  <% if camera.photo.attached? %>
    <% camera.photo.each do |photo| %>
      <div class="img-container">
        <% if camera.bookings.present? %>
          <span class="badge badge-warning">Already Booked</span>
        <% end %>
        <%= image_tag photo if photo %>
      </div>
    <% end %>
  <% end %>
  <div class="info-container">
    <h4>Model: <%= camera.model %></h4>
    <p>Year: <%= camera.year %></p>
    <p>Condition: <%= camera.condition %></p>
    <p>Price: <%= camera.price %></p>
  </div>
</div>
